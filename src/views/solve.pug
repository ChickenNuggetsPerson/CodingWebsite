extends layout

block layout-content

  html
    head
           
    body()

      div( class="swipe-container")
        div( class="container text-center formBackground" style="width:90%;")  

          h2(id="challengeTitle") Daily Challenge:
          br
          b3(id="challengeDesc")
          br
          br
          span(class="input-group-text" id="functionDecloration") Text
          div(class="input-group")
            textarea(id="code-input" class="form-control" aria-label="With textarea" style="height:300px;;")
          span(class="input-group-text" id="functionEnd")

          br
          button(type="button" class="btn btn-success" id="execute-button") Execute Code
          br
          br

          div(class="container text-center")
            div(class="row")
              div(class="col")
                h2 Tests 
              div(class="col")
                h2 Output:
            div(class="row")
              div(class="col")

                div(class="container text-center" id="testGrid")
                  


              div(class="col")
                pre(id="result-display")

          br
          br

          div(class="btn-group")
            button(type="button" class="btn btn-primary dropdown-toggle dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false") Try Other Challenges
              
            ul(class="dropdown-menu" id="challengeDropdown")
              li
                a(class="dropdown-item" href="/") Current Challenge
              li
                hr(class="dropdown-divider")

      button(type="button" class="btn" style="position:relative; bottom:-50; background-color:rgb(var(--bs-secondary-bg-rgb));" onclick='changePage("/admin/login")') Admin View
          

      script.
        var challenge = !{challenge};
        var userID = !{userID};
        var otherChallenges = !{otherChallenges}
      script(src="/static/solve.js")
